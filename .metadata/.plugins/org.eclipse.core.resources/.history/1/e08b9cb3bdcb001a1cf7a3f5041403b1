package step01.exam02;

public class Test03 {

	public static void main(String[] args) {
		//병원의 환자를"Patient"라는 클래스로 추상화(데이터화)시켰다.
		Patient p2 = new Patient();
		p2.name = "임꺽정";
		//p.age = 30;
		p2.setAge(30);
		p2.setWeight(90);
		p2.setHeight(180);
		p2.gender = false;
		
//		Patient p2 = new Patient();
		p2.name = "홍길동";
		p2.setAge(300);		//환자나이로 적합하지 않다.
		p2.setWeight(70);
		p2.setHeight(30);	//환자의 키로 적합하지 않다.
		p2.gender = false;
		//p2의 경우처럼 유효하지 않는 값을 넣게되면,
		//환자 데이터로서 신뢰성을 상실하게 된다.
		//=>Patient를 추상화 시킨 의미가 상실된다.
		//=>해결책?캡슐화
		System.out.printf("나이: %d\n", p2.getAge());
		System.out.printf("몸무게: %d\n", p2.getWeight());
		System.out.printf("키: %d\n", p2.getHeight());

	}

}
